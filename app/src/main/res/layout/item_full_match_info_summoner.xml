<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:layout_marginTop="0dp"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="0dp"
    >

    <RelativeLayout
        android:id="@+id/full_match_view"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_full_info_champion_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="3dp"
            android:background="@color/transpGray"
            android:scaleType="fitStart" />

        <TextView
            android:id="@+id/iv_full_info_summoner_name"
            android:layout_width="71dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/iv_full_info_champion_icon"
            android:layout_marginStart="86dp"
            android:layout_marginVertical="7dp"
            android:textColor="#101010"
            android:textSize="9sp"
            tools:text="Blitzcrank" />

        <ImageView
            android:id="@+id/iv_full_info_champion_spell_1"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/iv_full_info_champion_icon"
            android:layout_marginStart="46dp"
            android:background="@color/transpGray" />

        <ImageView
            android:id="@+id/iv_full_info_champion_spell_2"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignBottom="@+id/iv_full_info_champion_icon"
            android:layout_alignStart="@+id/iv_full_info_champion_spell_1"
            android:background="@color/transpGray" />

        <ImageView
            android:id="@+id/iv_full_info_champion_perk0"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignTop="@+id/iv_full_info_champion_icon"
            android:layout_marginLeft="3dp"
            android:layout_toEndOf="@+id/iv_full_info_champion_spell_1"
            android:background="@color/md_black_1000"
            card_view:srcCompat="@color/transpGray" />

        <ImageView
            android:id="@+id/iv_full_info_champion_perk_sub_style"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignStart="@+id/iv_full_info_champion_perk0"
            android:layout_alignTop="@+id/iv_full_info_champion_spell_2"
            card_view:srcCompat="@color/transpGray" />

        <TextView
            android:id="@+id/tv_full_info_champion_kill_death_assists"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_full_info_champion_icon"
            android:layout_alignStart="@+id/iv_full_info_summoner_name"
            android:textSize="9sp"
            tools:text="11/4/20" />

        <TextView
            android:id="@+id/tv_full_info_champion_kda"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_full_info_champion_icon"
            android:layout_alignParentStart="true"
            android:layout_alignStart="@+id/tv_full_info_champion_kill_death_assists"
            android:layout_marginStart="128dp"
            android:textSize="9sp"
            tools:text="7.75:1 KDA" />

        <ImageView
            android:id="@+id/iv_full_info_champion_item0"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/iv_full_info_champion_item1"
            android:background="@color/transpGray" />

        <ImageView
            android:id="@+id/iv_full_info_champion_item1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/iv_full_info_champion_item2"
            android:background="@color/transpGray" />

        <ImageView
            android:id="@+id/iv_full_info_champion_item2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/iv_full_info_champion_item3"
            android:background="@color/transpGray" />

        <ImageView
            android:id="@+id/iv_full_info_champion_item3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/iv_full_info_champion_item4"
            android:background="@color/transpGray" />

        <ImageView
            android:id="@+id/iv_full_info_champion_item4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/iv_full_info_champion_item5"
            android:background="@color/transpGray" />

        <ImageView
            android:id="@+id/iv_full_info_champion_item5"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/iv_full_info_champion_item6"
            android:background="@color/transpGray" />

        <ImageView
            android:id="@+id/iv_full_info_champion_item6"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:background="@color/transpGray" />


    </RelativeLayout>



</android.support.v7.widget.CardView>

