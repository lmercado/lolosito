<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_champion_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:background="@mipmap/ic_launcher"
            android:scaleType="fitStart" />

        <TextView
            android:id="@+id/tv_champion_name"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/iv_champion_icon"
            android:textColor="#101010"
            android:textSize="14sp"
            tools:text="Blitzcrank" />

        <TextView
            android:id="@+id/tv_game_type"
            android:layout_width="143dp"
            android:layout_height="22dp"
            android:layout_above="@+id/iv_champion_icon"
            android:layout_alignParentStart="true"
            android:layout_marginStart="17dp"
            android:text="TextView"
            android:textSize="14sp"
            tools:text="Summoner's Rift" />

        <ImageView
            android:id="@+id/iv_champion_spell_1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/iv_champion_item1"
            android:layout_alignStart="@+id/iv_champion_spell_2"
            card_view:srcCompat="@android:drawable/sym_def_app_icon" />

        <ImageView
            android:id="@+id/iv_champion_spell_2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/iv_champion_icon"
            android:layout_alignParentStart="true"
            android:layout_marginStart="93dp"
            card_view:srcCompat="@android:drawable/sym_def_app_icon" />

        <TextView
            android:id="@+id/tv_kill_death_assists"
            android:layout_width="61dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/iv_champion_spell_1"
            android:layout_marginStart="123dp"
            tools:text="11/4/20" />

        <TextView
            android:id="@+id/tv_kda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_champion_icon"
            android:layout_alignStart="@+id/tv_kill_death_assists"
            tools:text="7.75:1 KDA" />

        <TextView
            android:id="@+id/tv_champion_final_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/iv_champion_spell_1"
            android:layout_marginEnd="153dp"
            android:textSize="12sp"
            tools:text="Level 18" />

        <TextView
            android:id="@+id/tv_champion_cs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_champion_icon"
            android:layout_alignStart="@+id/tv_champion_final_level"
            android:textSize="12sp"
            tools:text="145 CS" />

        <ImageView
            android:id="@+id/iv_champion_item0"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/iv_champion_icon"
            android:layout_marginEnd="101dp"
            card_view:srcCompat="@android:drawable/sym_def_app_icon" />

        <ImageView
            android:id="@+id/iv_champion_item1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/iv_champion_icon"
            android:layout_marginEnd="64dp"
            card_view:srcCompat="@android:drawable/sym_def_app_icon" />

        <ImageView
            android:id="@+id/iv_champion_item2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/iv_champion_icon"
            android:layout_marginEnd="28dp"
            card_view:srcCompat="@android:drawable/sym_def_app_icon" />

        <ImageView
            android:id="@+id/iv_champion_item3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_above="@+id/tv_champion_name"
            android:layout_alignStart="@+id/iv_champion_item1"
            card_view:srcCompat="@android:drawable/sym_def_app_icon" />

        <ImageView
            android:id="@+id/iv_champion_item4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_above="@+id/tv_champion_name"
            android:layout_alignStart="@+id/iv_champion_item2"
            card_view:srcCompat="@android:drawable/sym_def_app_icon" />

        <ImageView
            android:id="@+id/iv_champion_item5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_above="@+id/tv_champion_name"
            android:layout_alignStart="@+id/iv_champion_item3"
            card_view:srcCompat="@android:drawable/sym_def_app_icon" />


    </RelativeLayout>



</android.support.v7.widget.CardView>

