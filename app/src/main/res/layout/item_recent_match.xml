<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="0dp"
    >

    <RelativeLayout
        android:id="@+id/single_match_view"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_champion_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="3dp"
            android:background="@mipmap/ic_launcher"
            android:scaleType="fitStart" />

        <TextView
            android:id="@+id/tv_champion_name"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/iv_champion_icon"
            android:layout_marginStart="3dp"
            android:layout_marginVertical="7dp"
            android:textColor="#101010"
            android:textSize="14sp"
            tools:text="Blitzcrank" />

        <TextView
            android:id="@+id/tv_game_type"
            android:layout_width="143dp"
            android:layout_height="22dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            android:text="TextView"
            android:textSize="14sp"
            tools:text="Summoner's Rift" />

        <ImageView
            android:id="@+id/iv_champion_spell_1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/iv_champion_item0"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/iv_champion_icon"
            android:background="@color/transpGray" />

        <ImageView
            android:id="@+id/iv_champion_spell_2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignStart="@+id/iv_champion_spell_1"
            android:layout_marginTop="65dp"
            android:background="@color/transpGray" />

        <TextView
            android:id="@+id/tv_kill_death_assists"
            android:layout_width="81dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/iv_champion_spell_1"
            android:layout_marginStart="128dp"
            tools:text="11/4/20" />

        <TextView
            android:id="@+id/tv_kda"
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_champion_icon"
            android:layout_alignStart="@+id/tv_kill_death_assists"
            android:layout_alignParentStart="true"
            android:layout_marginStart="128dp"
            tools:text="7.75:1 KDA" />

        <TextView
            android:id="@+id/tv_champion_final_level"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_kill_death_assists"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="0dp"
            android:layout_toEndOf="@+id/tv_kill_death_assists"
            android:layout_toStartOf="@+id/iv_champion_item0"
            android:gravity="end"
            android:textSize="12sp"
            tools:text="Level 18" />

        <TextView
            android:id="@+id/tv_champion_cs"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_kda"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="0dp"
            android:layout_toEndOf="@+id/tv_kda"
            android:layout_toStartOf="@+id/iv_champion_item3"
            android:gravity="end"
            android:textSize="12sp"
            tools:text="145 CS" />

        <ImageView
            android:id="@+id/iv_champion_item0"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/iv_champion_icon"
            android:layout_marginEnd="115dp"
            android:layout_marginTop="-3dp"
            android:background="@color/transpGray" />

        <ImageView
            android:id="@+id/iv_champion_item1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignTop="@+id/iv_champion_icon"
            android:layout_marginStart="-112dp"
            android:layout_marginTop="-3dp"
            android:layout_toEndOf="@+id/iv_champion_item0"
            android:background="@color/transpGray" />

        <ImageView
            android:id="@+id/iv_champion_item2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignTop="@+id/iv_champion_icon"
            android:layout_marginStart="3dp"
            android:layout_marginTop="-3dp"
            android:layout_toEndOf="@+id/iv_champion_item1"
            android:background="@color/transpGray" />

        <ImageView
            android:id="@+id/iv_champion_item3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/iv_champion_icon"
            android:layout_alignStart="@+id/iv_champion_item0"
            android:background="@color/transpGray" />

        <ImageView
            android:id="@+id/iv_champion_item4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/iv_champion_icon"
            android:layout_alignStart="@+id/iv_champion_item1"
            android:background="@color/transpGray" />

        <ImageView
            android:id="@+id/iv_champion_item5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/iv_champion_icon"
            android:layout_alignStart="@+id/iv_champion_item2"
            android:background="@color/transpGray" />

        <ImageView
            android:id="@+id/iv_champion_item6"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:layout_toEndOf="@+id/iv_champion_item2"
            android:background="@color/transpGray" />

        <ImageView
            android:id="@+id/iv_champion_perk_primary_style"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignEnd="@+id/tv_champion_name"
            android:layout_alignTop="@+id/iv_champion_spell_1"
            card_view:srcCompat="@color/transpGray" />

        <ImageView
            android:id="@+id/iv_champion_perk_secondary_style"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignStart="@+id/iv_champion_perk_primary_style"
            android:layout_alignTop="@+id/iv_champion_spell_2"
            card_view:srcCompat="@color/transpGray" />


    </RelativeLayout>



</android.support.v7.widget.CardView>

